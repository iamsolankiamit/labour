<%= simple_form_for @labour, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :first_name %>
  <%= error_span(@labour[:first_name]) %>
  <%= f.input :last_name %>
  <%= error_span(@labour[:last_name]) %>
  <%= f.input :phone_no %>
  <%= error_span(@labour[:phone_no]) %>
  <%= f.input :date_of_joining %>
  <%= error_span(@labour[:date_of_joining]) %>
  <%= f.input :salary_per_day %>
  <%= error_span(@labour[:salary_per_day]) %>
  <%= f.input :client_salary %>
  <%= error_span(@labour[:client_salary]) %>
  <%= f.input :salary_for_hours %>
  <%= error_span(@labour[:salary_for_hours]) %>
  <%= f.input :on_vacation %>
  <%= error_span(@labour[:on_vacation]) %>
  <%= f.input :has_left %>
  <%= error_span(@labour[:has_left]) %>
  <% work_array = Work.client_not_on_vacation.map { |work| ["#{work.client.first_name} #{work.client.last_name}",work.id] } %>
  <%= f.input :work_id, collection: work_array %>
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                labours_path, :class => 'btn btn-default' %>
<% end %>
