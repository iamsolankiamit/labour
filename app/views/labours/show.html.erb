<%- model_class = Labour -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:first_name) %>:</strong></dt>
  <dd><%= @labour.first_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_name) %>:</strong></dt>
  <dd><%= @labour.last_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone_no) %>:</strong></dt>
  <dd><%= @labour.phone_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_of_joining) %>:</strong></dt>
  <dd><%= @labour.date_of_joining %></dd>
  <dt><strong><%= model_class.human_attribute_name(:salary_per_day) %>:</strong></dt>
  <dd><%= @labour.salary_per_day %></dd>
  <dt><strong><%= model_class.human_attribute_name(:salary_for_hours) %>:</strong></dt>
  <dd><%= @labour.salary_for_hours %></dd>
  <dt><strong><%= model_class.human_attribute_name(:on_vacation) %>:</strong></dt>
  <dd><%= @labour.on_vacation %></dd>
  <dt><strong><%= model_class.human_attribute_name(:has_left) %>:</strong></dt>
  <dd><%= @labour.has_left %></dd>
  <% unless @labour.work.nil? %>
  <dt><strong><%= model_class.human_attribute_name(:work) %>:</strong></dt>
  <dd><%= @labour.work.name_with_client_name %></dd>
  <% end %>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              labours_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_labour_path(@labour), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              labour_path(@labour),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
