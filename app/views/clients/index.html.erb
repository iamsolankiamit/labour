<%- model_class = Client -%>
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h2>Clients</h2>
      <hr>
      <div class="table-responsive">
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:first_name) %></th>
      <th><%= model_class.human_attribute_name(:last_name) %></th>
      <th><%= model_class.human_attribute_name(:phone_no) %></th>
      <th><%= model_class.human_attribute_name(:mobile_no) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @clients.each do |client| %>
      <tr <%= client.on_vacation == true ? "class=danger" : "" %>>
        <td><%= link_to client.id, client_path(client) %></td>
        <td><%= client.first_name %></td>
        <td><%= client.last_name %></td>
        <td><%= client.phone_no %></td>
        <td><%= client.mobile_no %></td>
        <td><%= client.email %></td>
        <td>
          <%= link_to "Modify",
                      edit_client_path(client), :class => 'btn btn-default btn-xs' %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>
      </div>
      <hr>

<%= link_to "New Client",
            new_client_path,
            :class => 'btn btn-primary' %>

    </div>
  </div>
</div>
